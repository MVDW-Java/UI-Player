{
	"name": "UI-Player",
	"version": "0.5.4",
	"description": "The all in one media player",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"author": "MVDW",
	"license": "None for now lmao",
	"devDependencies": {
		"electron": "^11.0.3",
		"electron-builder": "^22.9.1",
		"yarn": "^1.22.10"
	},
	"build": {
		"productName": "UI-Player",
		"appId": "com.mvdwstudios.ui-player",
		"asar": true,
		"win": {
			"target": [
				"nsis"
			],
			"icon": "build/icon.ico"
		},
		"nsis": {
			"installerIcon": "build/32x32.ico",
			"installerHeaderIcon": "build/64x64.ico",
			"deleteAppDataOnUninstall": true
		},
		"fileAssociations": [
			{
				"ext": "brstm",
				"name": "Binary Revolution Stream",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "mp4",
				"name": "MPEG-4",
				"role": "open",
				"icon": "assets/ico/file_formats/mp4.ico"
			},
			{
				"ext": "avi",
				"name": "avi",
				"role": "open",
				"icon": "assets/ico/file_formats/mp4.ico"
			},
			{
				"ext": "mkv",
				"name": "MKV",
				"role": "open",
				"icon": "assets/ico/file_formats/mp4.ico"
			},
			{
				"ext": "mov",
				"name": "MOV",
				"role": "open",
				"icon": "assets/ico/file_formats/mp4.ico"
			},
			{
				"ext": "webm",
				"name": "webm",
				"role": "open",
				"icon": "assets/ico/file_formats/mp4.ico"
			},
			{
				"ext": "mp3",
				"name": "mp3",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "wav",
				"name": "wav",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "flac",
				"name": "flac",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "ogg",
				"name": "ogg",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "png",
				"name": "png",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "jpg",
				"name": "jpg",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "jpeg",
				"name": "jpeg",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "gif",
				"name": "gif",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			},
			{
				"ext": "bmp",
				"name": "bmp",
				"role": "open",
				"icon": "assets/ico/file_formats/brstm.ico"
			}
		]
	},
	"dependencies": {
		"discord-rich-presence": "0.0.8",
		"discord-rpc": "^3.1.4",
		"youtube-stream-url": "^2.0.2"
	}
}
